{
  "name": "poker-checker",
  "version": "1.0.0",
  "description": "Check results of poker games",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "cd packages/common && yarn build && cd ../server && yarn build",
    "server": "cd packages/server && yarn start",
    "web": "cd packages/web && yarn start",
    "start": "concurrently \"yarn run server\" \"yarn run web\"",
    "test": "jest --config ./packages/common/jest.config.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^6.3.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "concurrently": "^7.6.0",
    "jsonwebtoken": "^9.0.0"
  }
}
